{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        {% set columnCount = 0 %}
        {% if labels is empty %}
            <div class="alert alert-info text-center">
                <h4>There is no data available, please ensure the import has run.</h4>
            </div>
        {% else %}
            {% for prefix, labelGroup in labels %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span>{{ prefix == 'no_prefix' ? 'Other Labels' : prefix }}</span>
                            <small class="text-muted">{{ labelGroup|length }} labels</small>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% set maxVisible = 8 %}
                            {% for labelData in labelGroup %}
                                {% set quotedLabel = '"' ~ labelData.label ~ '"' %}
                                {% set githubUrl = "https://github.com/magento/magento2/issues?q=is%3Aissue+is%3Aopen+label%3A" ~ quotedLabel|url_encode %}
                                <li class="list-group-item d-flex justify-content-between align-items-center {{ loop.index0 >= maxVisible ? 'collapse-item d-none' : '' }}" data-group="{{ loop.parent.loop.index0 }}">
                                    <a href="{{ githubUrl }}" target="magentoForgerGitHub" class="text-decoration-none">
                                        {{ labelData.label }}
                                    </a>
                                    <span class="badge bg-primary rounded-pill">{{ labelData.count }}</span>
                                </li>
                            {% endfor %}
                            {% if labelGroup|length > maxVisible %}
                                <li class="list-group-item text-center">
                                    <button class="btn btn-sm btn-outline-primary expand-btn" data-group="{{ loop.index0 }}" onclick="toggleGroup({{ loop.index0 }})">
                                        <i class="fas fa-chevron-down"></i> Show {{ labelGroup|length - maxVisible }} more
                                    </button>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>

                {% set columnCount = columnCount + 1 %}
                {% if columnCount % 3 == 0 %}
                    </div><div class="row">
                {% endif %}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
<script>
function toggleGroup(groupIndex) {
    const button = document.querySelector(`.expand-btn[data-group="${groupIndex}"]`);
    const hiddenItems = document.querySelectorAll(`.collapse-item[data-group="${groupIndex}"]`);
    const isExpanded = !hiddenItems[0].classList.contains('d-none');

    hiddenItems.forEach(item => {
        if (isExpanded) {
            item.classList.add('d-none');
        } else {
            item.classList.remove('d-none');
        }
    });

    if (isExpanded) {
        button.innerHTML = `<i class="fas fa-chevron-down"></i> Show ${hiddenItems.length} more`;
    } else {
        button.innerHTML = `<i class="fas fa-chevron-up"></i> Show less`;
    }
}
</script>
{% endblock %}
